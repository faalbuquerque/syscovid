<h2><%= t(:monitoring).capitalize%></h2>
<!- https://unsplash.com/photos/ZzOa5G8hSPI -->
<%= t(:user).capitalize %>: <%= current_user.email %>

<div class="row">
  <div class="col s12 m14" style="padding: 0">

    <div class="card grey lighten-4 col s12 m4" style="padding: 0;">
      <div class="card-image">
        <%= image_tag  "monitoring/monitoring.png" %>
        <span class="card-title"><%= t(:monitoring).capitalize%></span>
      </div>
      <div class="card-content">


        <p><%= t(:monitoring_page_text).capitalize %></p>
        
        <% if @alert=='not_enough' %>
          <p><%= t(:not_enough_data_yet) %></p>
          <p> <%= t(:still_getting_infos) %></p>
          <div class="progress" style='width: 100%;'>
              <div class="indeterminate"></div>
          </div>
          <p> <%= t(:please_come_back_later) %></p>
        <% end %>

        <p><%= t(:green_zip_code).capitalize if @alert=='green' %></p>
        <p><%= t(:yellow_zip_code).capitalize if @alert=='yellow' %></p>
        <p><%= t(:red_zip_code).capitalize if @alert=='red' %></p>


      </div>
      <div class="card-action center-align">
        <%= link_to  t(:where_health_services).capitalize, t(:where_to_go) %>
      </div>
    </div>



    <div class="card blue-grey darken-1 col s12 m7 push-m1">
      <div class="card-content white-text">
        <span class="card-title"><%= t(:special_card_title) %></span>
        <p><%= raw t(:special_card_html)%></p>
      </div>
    </div>




  </div>
</div>


